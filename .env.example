# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
PORT=3000
NODE_ENV=development

# Session Security
SESSION_SECRET=your_secure_session_secret_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin SDK (for server-side token verification)
# Use either service account key JSON or default credentials
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Model Configuration (demo)
# Primary model used by the Collaborator agent (streaming)
COLLABORATOR_MODEL=claude-3-5-haiku-latest
# Optional: Memory Keeper model; if unset, server will use COLLABORATOR_MODEL
# MEMORY_MODEL=claude-3-5-haiku-latest

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
MAX_MESSAGE_LENGTH=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
# Encryption key for sensitive data (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# CORS Configuration (optional - for cross-origin requests)
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Logging and monitoring
LOG_LEVEL=info
ENABLE_ANALYTICS=false
