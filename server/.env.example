# Vibe-Agents Server Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vibe_agents_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Authentication Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_change_this_in_production
JWT_EXPIRES_IN=30d
MAGIC_LINK_EXPIRES_IN=15m

# Email Configuration (for magic links)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@vibe-agents.com
EMAIL_FROM_NAME=Vibe-Agents

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Session Configuration
SESSION_CLEANUP_INTERVAL=3600000
